*{box-sizing:border-box}
:root{
  --bg:#0f172a; /* slate-900 */
  --panel:#111827; /* gray-900 */
  --muted:#94a3b8; /* slate-400 */
  --text:#e5e7eb; /* gray-200 */
  --accent:#22d3ee; /* cyan-400 */
  --accent-2:#34d399; /* emerald-400 */
  --danger:#f87171; /* red-400 */
}
html,body{height:100%}
body{
  margin:0; background:var(--bg); color:var(--text); font:16px/1.5 system-ui, -apple-system, Segoe UI, Roboto, Ubuntu, Cantarell, Noto Sans, Arial, "Apple Color Emoji","Segoe UI Emoji";
}
.topbar{
  display:flex; align-items:center; justify-content:space-between; gap:1rem;
  padding:.75rem 1rem; border-bottom:1px solid #1f2937; position:sticky; top:0; background:rgba(15,23,42,.85); backdrop-filter:saturate(140%) blur(6px);
}
.brand{display:flex; align-items:center; gap:.75rem}
.brand .logo{font-size:1.5rem}
.brand h1{margin:0; font-size:1.1rem; letter-spacing:.2px}
.actions{display:flex; flex-wrap:wrap; gap:.5rem}
button{
  border:1px solid #1f2937; background:#0b1222; color:var(--text);
  padding:.45rem .75rem; border-radius:.6rem; cursor:pointer;
}
button:hover{border-color:#334155}
button.primary{border-color:transparent; background:linear-gradient(180deg,var(--accent),#0891b2); color:#00222a; font-weight:600}
button.danger{border-color:transparent; background:linear-gradient(180deg,var(--danger),#b91c1c); color:#2a0000; font-weight:600}
.container{display:grid; grid-template-columns: 320px 1fr; gap:1rem; padding:1rem; min-height:calc(100vh - 64px)}
.sidebar{display:flex; flex-direction:column; gap:1rem}
.panel{
  background:var(--panel); border:1px solid #1f2937; border-radius:1rem; padding:1rem;
}
.panel h3{margin:.2rem 0 .5rem 0}
.panel .row{display:flex; gap:.5rem; margin-top:.5rem}
label{display:block; margin:.35rem 0}
input[type="search"], input[type="text"], textarea, select, input{
  width:100%; padding:.5rem .6rem; border-radius:.5rem; border:1px solid #1f2937; background:#0b1222; color:var(--text);
}
.small{font-size:.85rem}
.muted{color:var(--muted)}
.tips ol{margin:.25rem 0 .5rem 1rem}
.workspace{display:flex; flex-direction:column; gap:1rem}
.card-area{
  display:grid; grid-template-columns: repeat(auto-fill, minmax(260px, 1fr)); gap:1rem;
}
.card{
  background:linear-gradient(180deg,#0b1222,#0b1222);
  border:1px solid #1f2937; border-radius:1rem; padding:1rem; min-height:180px; position:relative;
}
.card .word{font-size:1.25rem; font-weight:700}
.card .definition{margin:.25rem 0 .5rem 0; color:#cbd5e1}
.card .example{font-style:italic; color:#a5b4fc}
.card .tip{color:#86efac; margin-top:.5rem}
.card .meta{position:absolute; top:.75rem; right:.75rem; font-size:.8rem; color:var(--muted)}
.card .actions{display:flex; gap:.35rem; position:absolute; bottom:.75rem; right:.75rem}
.card .spaced{
  display:flex; gap:.35rem; margin-top:.5rem;
}
.card button.grade{font-size:.85rem; padding:.35rem .5rem}
.grade.again{background:#1f2937}
.grade.hard{background:#0b3b36}
.grade.good{background:#063b2a}
.grade.easy{background:#07324d}
.hidden{display:none}
.table-area table{width:100%; border-collapse:collapse}
.table-area th, .table-area td{border-bottom:1px solid #1f2937; padding:.5rem; text-align:left}
.table-area tbody tr:hover{background:#0b1222}
.dialog-form{min-width:360px}
.dialog-form .row{display:flex; gap:.5rem; margin-top:.5rem; align-items:center}
.dialog-form .right{justify-content:flex-end}
dialog{border:1px solid #1f2937; border-radius:1rem; background:var(--panel); color:var(--text); padding:1rem}
.quiz-area .quiz-question{font-size:1.15rem; margin:.25rem 0 .5rem 0}
.quiz-area .quiz-choices{display:flex; flex-direction:column; gap:.5rem}
.quiz-area .quiz-choices button{justify-content:flex-start}
.quiz-meta{display:flex; justify-content:space-between; align-items:center}
.foot{display:flex; justify-content:space-between; align-items:center; gap:.75rem; padding:1rem; border-top:1px solid #1f2937}
a{color:var(--accent)}
